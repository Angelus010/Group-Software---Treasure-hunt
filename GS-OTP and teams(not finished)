		<script>
                    
                 
      	
		function random_password(){
                 
                 var userList=document.getElementById("users");
               var ListItem = document.createElement("li");
               ListItem.textContent="user";
               userList.appendChild(ListItem);
     
           
                    
                    	for(let i=1;i<userList.length;i++){
         
              var password= function (max,min){
                             
    return Math.random() * (max - min) + min;
};
       
             var passwordArray=[];
            passwordArray[i]=password(500000,50000);

           var TeamList=document.getElementById("teams");

            		
		if(passwordArray[i]%2===0){
		
                 var TeamItem = document.createElement("li");
               TeamItem.textContent="Team"+ i;
               TeamList.appendChild(TeamItem);
                document.write("You are part of Team"+ i);
                
                }else {
                   var TeamItem = document.createElement("li");
               TeamItem.textContent="Team"+i;
               TeamList.appendChild(TeamItem);
             document.write("You are part of Team"+ i);
            
        }
                
       
        
            
            
                }
                        }
                
    
                
  
		
		
		</script>
              
